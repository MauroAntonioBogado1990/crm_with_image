    <template id="add_instagram_to_my_account" inherit_id="portal.portal_my_details_fields">
    <xpath expr="//div[label[@for='phone']]" position="after">
        <div t-attf-class="mb-3 #{error.get('instagram_account') and 'o_has_error' or ''} col-xl-6">
            <label class="col-form-label label-optional" for="instagram_account">Instagram</label>
            <input type="text" name="instagram_account"
                   t-attf-class="form-control #{error.get('instagram_account') and 'is-invalid' or ''}"
                   t-att-value="instagram_account or partner.instagram_account"/>
        </div>
    </xpath>
