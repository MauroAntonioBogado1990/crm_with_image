<odoo>
  <data>
       
 <record id="action_fotos_equitacion" model="ir.actions.act_window">
    <field name="name">Procesar</field>
    <field name="res_model">fotos.equitacion</field>
    <field name="view_mode">form</field>
    <field name="target">new</field> 
</record> 
<!--template de agregado de datos de fotrago en la imagen del producto-->
        <template id="product_photographer_data" inherit_id="website_sale.product">
            <xpath expr="//div[@id='product_details']" position="inside">
                
                <t t-set="photographer" t-value="product.sudo().photographer_id"/>
                
               
                <div class="mt-3" t-if="photographer">
                    <h5>Información del Fotógrafo</h5>
                    <ul>
                        <li><strong>Nombre:</strong> <t t-esc="photographer.name  or 'No disponible'"/></li>
                        <li><strong>Email:</strong> <t t-esc="photographer.email or 'No disponible'"/></li>
                        <li><strong>WhatsApp:</strong> <t t-esc="photographer.phone or 'No disponible'"/></li>
                        <li><strong>Instagram:</strong> <t t-esc="photographer.instagram_account or 'No disponible'"/></li>
                        <li><strong>Alias Bancario:</strong> <t t-esc="photographer.bank_alias or 'No disponible'"/></li>
                        <li><strong>CBU/CVU:</strong> <t t-esc="photographer.bank_cbu_cvu or 'No disponible'"/></li>
                    </ul>
                </div> 
            
                        <t t-set="current_user" t-value="request.env.user"/>
                        <!--se crea esta variable  en el caso que no este disponible alguno de los campos-->
                        <!-- <t t-set="needs_update" t-value="not current_user.email or not current_user.phone"/> -->
                        <t t-set="needs_update" t-value="not current_user.email or not current_user.phone or not current_user.instagram_account"/> 

                        <div class="mt-3">
                           
                            <form action="/update_user_profile" method="post" class="o_website_form">
                                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>

                                <div class="form-group">
                                
                                <t t-if="not current_user.email">
                                
                                <label>Por favor cargue su Email </label>
                                    <span class="badge bg-warning text-dark">Cargar email</span>
                                    <input type="email" name="email" class="form-control"
                                    t-att-value="current_user.email or ''"/>
                                </t>
                                
                            </div>

                            <div class="form-group">
                               
                                <t t-if="not current_user.phone">
                                 <label>Por favor cargue su WhatsApp</label>
                                    <span class="badge bg-warning text-dark">Cargar teléfono</span>
                                    <input type="text" name="phone" class="form-control"
                                    t-att-value="current_user.phone or ''"/>
                                </t>
                                
                            </div>

                             <div class="form-group">
                               
                                <t t-if="not current_user.instagram_account">
                                  <label>Por favor cargue su cuenta de Instagram</label>
                                    <span class="badge bg-warning text-dark">Cargar Instagram</span>
                                </t>
                                <input type="text" name="instagram_account" class="form-control"
                                    t-att-value="current_user.instagram_account or ''"/>
                            </div> 

                             <t t-if="needs_update">
                                <button type="submit" class="btn btn-primary mt-2">Guardar</button>
                            </t>

                            </form>
                        </div>


                    </xpath>
    </template>
  </data>
</odoo>